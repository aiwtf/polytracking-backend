# PolyTracking Backend Environment Variables
# Copy to .env and fill with actual values

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# API Security (generate with: openssl rand -hex 32)
RUN_SECRET_KEY=<REPLACE_WITH_SECRET_KEY>

# Telegram Bot Configuration (get BOT_TOKEN from @BotFather)
BOT_TOKEN=<REPLACE_WITH_BOT_TOKEN>
TG_CHANNEL=@Polytracking
TG_THREAD_ID=4

# Polymarket API
POLY_REST_URL=https://api.polymarket.com/v4/markets
POLL_INTERVAL=45
PAGE_LIMIT=150

# Alchemy (optional, not currently used)
# ALCHEMY_API_KEY=DqzkvKjfjl4dTLIZDnlxk
# ALCHEMY_URL=https://polygon-mainnet.g.alchemy.com/v2/DqzkvKjfjl4dTLIZDnlxk

# Scoring Parameters
MIN_TRADES_90D=5
